{
  "name": "eureka/component-web",
  "description": "Basic component for website: Breadcrumb, Menu, Meta & Notification",
  "type": "library",
  "minimum-stability": "stable",
  "license": "MIT",

  "authors": [
    {
      "name": "Romain Cottard",
      "role": "Developer"
    }

  ],

  "autoload": {
    "psr-4": {
      "Eureka\\Component\\Web\\": "./src"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Eureka\\Component\\Web\\Tests\\Unit\\": "./tests/unit"
    }
  },

  "config": {
    "sort-packages": true
  },

  "require": {
    "php": "8.1.*||8.2.*||8.3.*",
    "ext-mbstring": "*",

    "psr/http-message": "^1.0||^2.0",
    "psr/cache": "^1.0||^2.0||^3.0"
  },

  "require-dev": {
    "friendsofphp/php-cs-fixer": "^3.51.0",
    "maglnet/composer-require-checker": "^4.7.1",
    "phpstan/phpstan": "^1.10.60",
    "phpstan/phpstan-phpunit": "^1.3.16",
    "phpstan/phpstan-strict-rules": "^1.5.2",
    "phpunit/phpcov": "^9.0.2",
    "phpunit/phpunit": "^10.5.12",
    "symfony/cache": "^6.4.4||^7.0"
  }

}
