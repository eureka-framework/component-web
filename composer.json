{
  "name": "eureka/component-web",
  "description": "Basic component for website: Breadcrumb, Menu, Meta & Notification",
  "type": "library",
  "minimum-stability": "stable",
  "license": "MIT",

  "authors": [
    {
      "name": "Romain Cottard",
      "role": "Developer"
    }

  ],

  "autoload": {
    "psr-4": {
      "Eureka\\Component\\Web\\": "./src"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Eureka\\Component\\Web\\Tests\\": "./tests"
    }
  },

  "config": {
    "sort-packages": true
  },

  "require": {
    "php": ">=7.4.0"
  },

  "require-dev": {
    "dealerdirect/phpcodesniffer-composer-installer": "^v0.7",
    "phpcompatibility/php-compatibility": "^9.3",
    "phpunit/phpcov": "^8.2.0",
    "phpunit/phpunit": "^9.4.0",
    "squizlabs/php_codesniffer": "^3.5",
    "symfony/cache": "^v5.1"
  }

}
