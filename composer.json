{
  "name": "eureka/component-web",
  "description": "Basic component for website: Breadcrumb, Menu, Meta & Notification",
  "type": "library",
  "minimum-stability": "stable",
  "license": "MIT",

  "authors": [
    {
      "name": "Romain Cottard",
      "role": "Developer"
    }

  ],

  "autoload": {
    "psr-4": {
      "Eureka\\Component\\Web\\": "./src"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Eureka\\Component\\Web\\Tests\\": "./tests"
    }
  },

  "config": {
    "sort-packages": true,
    "allow-plugins": {
      "dealerdirect/phpcodesniffer-composer-installer": true
    }
  },

  "require": {
    "php": "7.4.*||8.0.*||8.1.*||8.2.*",

    "psr/http-message": "^1.0||^2.0"
  },

  "require-dev": {
    "dealerdirect/phpcodesniffer-composer-installer": "^1.0",
    "phpstan/phpstan": "^1.10",
    "phpunit/phpcov": "^8.2",
    "phpunit/phpunit": "^9.6",
    "squizlabs/php_codesniffer": "^3.7",
    "symfony/cache": "^5.4||^6.3"
  }

}
